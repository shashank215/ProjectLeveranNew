@{
    ViewBag.Title = "Contact";
}
<div class="body-wrapper">
    <div class="body-content">
        <div style="text-align:center"> 
            <h2><img src="~/Resources/Images/Headphones.jpg" style="width:40px;height:40px;"> @ViewBag.Message</h2>
        </div>
        <div style="position:page; margin-top:20px;">
            <div id="leftdiv" class="col-md-6">
                <div style="color:#8f2323;" class="body-content">
                    <img src="~/Resources/Images/ContactDetails.jpg" >
                </div>
            </div>
          
            <div id="rightdiv" class="col-md-6">
                @Html.Partial("_ContactForm")
            </div>

        </div>
            <br />
            <br />
            <p>For any queries or complains please reach out to us at-</p>
            <address>
                <strong>Support:</strong>   <a href="mailto:Support@example.com">Support@example.com</a>
            </address>
        </div>
</div>
@section Scripts{
<script type="text/javascript">
    var form = $('#feedbackForm');

    form.submit(function (ev) {
                $.ajax({
                    type: form.attr('method'),
                    url: form.attr('action'),
                    data: form.serialize(),
                    success: function (data) {
                        if (data.success) {
                            $("#lblfeedbackSuccess").css("display", "block");
                        }
                        else {
                            $("#lblfeedbackSuccess").css("display", "none");
                        }
                    },
                    error: function (req, status, error) {
                        debugger;
                        alert("Oops! Something went wrong. Please try again later or call us .");
                    }
                });

                ev.preventDefault();
             });
             </script>
}